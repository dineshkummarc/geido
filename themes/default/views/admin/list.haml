= admin_partial(:header)

.container
  .content
    - if @posts.empty?
      %h2 
        You have no posts yet, 
        %a{:href=>"/admin/new"}Create One
    
    - @posts.each do |post|
      .post{:id=>"#{post.slug}"}
        .header
          %h2.title
            %a{:href=>"/posts/#{post.id}"}= post.title
        .meta
          = date(post)
          = tags(post)
          = admin_links(post)